<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.al_pc.recipes">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.DishesMainActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activities.AutentificationActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Activities.RegistrationActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Activities.DishActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Activities.OptionsActivity"
            android:windowSoftInputMode="stateHidden"/>
    </application>

</manifest>